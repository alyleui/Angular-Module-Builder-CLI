{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es6",
    "strictNullChecks": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}