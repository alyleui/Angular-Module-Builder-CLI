{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "es2015",
    "target": "es2015",
    "noImplicitAny": false,
    "outDir": "{dir}/es2015",
    "rootDir": ".",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": false,
    "strictNullChecks": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "paths": {}
  },
  "files": [
    "index.ts"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableSummariesForJit": false
  }
}